@model MVC_basico.Models.Pelicula

@{
    ViewData["Title"] = "Delete";
}

<h1>Cartelera</h1>

<h3>¿Esta seguro que desea eliminar esta pelicula de la cartelera?</h3>
<div>
    <h4>Detalles de la Pelicula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.genero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Ir a Cartelera</a>
    </form>
</div>
